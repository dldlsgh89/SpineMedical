<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"

        >
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <stroke
                        android:width="1dp"
                        android:color="#4D000000"
                        />
                    <solid android:color="#FFF" />
                    <corners
                        android:radius="5dp"
                        />
                </shape>
            </item>
            <item
                android:drawable="@drawable/arrow_pointing_down"
                android:gravity="center|end"
                android:right="5dp"
                android:width="25dp"
                android:height="25dp"
                >
            </item>
        </layer-list>
    </item>
</layer-list>