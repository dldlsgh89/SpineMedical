                    android:id="@+id/message_read_check"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom|left"
                    android:text="1"
                    android:textColor="#3498DB"
                    android:textSize="10sp" />
                <TextView
